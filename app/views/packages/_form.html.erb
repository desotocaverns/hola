<%= form_for @package, :html => {:id => "package_form"} do |f| %>
<div class='card'>
  <% if @package.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@package.errors.count, "error") %> prohibited this package from being saved:</h2>

      <ul>
      <% @package.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-row">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form-row">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="form-row">
    <%= f.label :price %>
    $<%= f.text_field :price, value: @package.price / 100.00 %>
  </div>

  <br>

  <div class="tickets">
    <% @tickets.each do |ticket| %>
      <% pt = @package.package_tickets.find_by(ticket_id: ticket.id) %>

      <%= f.label ticket.name %>
      <input type="text" autocomplete="off" name="package[package_tickets_attributes][][quantity]" <% if pt != nil %>value="<%= pt.quantity %>"<% end %>>
      <input type="hidden" autocomplete="off" name="package[package_tickets_attributes][][ticket_id]" value="<%= ticket.id %>"><br>
    <% end %>
  </div>

  <br>

  <div>
    <%= f.label :for_sale_on, "For sale: " %>
    <%= radio_button_tag "package[for_sale]", "true", checked: true %> Yes
    <%= radio_button_tag "package[for_sale]", "false" %> No
    <%= radio_button_tag "package[for_sale]", "after" %> After
    <%= f.date_select :for_sale_on %>
  </div>

</div>
<footer class="form-footer">
  <%= link_to 'Cancel', tickets_path, class: 'text-button' %>
  <button class='primary-button' type="submit" name="commit">Create Package</button>
</footer>
<% end %>
