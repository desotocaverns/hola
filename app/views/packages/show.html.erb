<% content_for :head do %>
  <style>
    table, th, td {
      border: 1px solid black;
    }
  </style>
<% end %>

<h2><%= @package.name %></h2>

<% if @package.description != '' %>
  <p><%= @package.description %></p>
<% end %>

<table>
  <tbody>
    <tr>
      <th>Price</th>
      <td>$<%= @package.price / 100.00 %></td>
    </tr>
  </tbody>
</table>

<br>


<h3>Tickets in this package</h3>
<td>
  <table>
    <tbody>
      <tr>
        <th>Quantity</th>
        <th>Name</th>
        <th>Price</th>
        <th>Description</th>
      </tr>
      <% @package.package_tickets.each do |package_ticket| %>
        <tr>
          <td><%= package_ticket.quantity %></td>
          <td><%= package_ticket.ticket.name %></td>
          <td><%= package_ticket.ticket.price %></td>
          <td><%= package_ticket.ticket.description %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</td>

<br>

<%= link_to 'Edit', edit_package_path(@package) %> |
<%= link_to 'Destroy', @package, :method => 'delete', data: { confirm: 'Are you sure?' } %> |
<%= link_to 'Back', tickets_path %>
