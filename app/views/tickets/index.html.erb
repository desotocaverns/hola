<h1>Listing Tickets & Packages</h1>

<% @tickets.each do |ticket| %>
  <strong><%= ticket.name %></strong> |
  <% if [Ticket.for_sale.find_by(:id => ticket.id)].any? %>
    Currently up for sale |
  <% else %>
    For sale on: <%= ticket.for_sale_on %> |
  <% end %>
  <%= link_to 'Show', ticket %>
  <%= link_to 'Edit', edit_ticket_path(ticket) %>
  <%= link_to 'Destroy', ticket, :method => 'delete', data: { confirm: 'Are you sure?' } %>

  <% if current_admin && current_admin.autocratic %>
    <%= form_tag change_priority_path(priority: ticket.priority, id: ticket.id), :method => :patch do %>
      <input type="hidden" name="type" value="Ticket">
      <%= submit_tag "Up", name: "up" %>
      <%= submit_tag "Down", name: "down" %>
    <% end %>
  <% end %>
  <br>
<% end %>

<%= link_to 'New Ticket', new_ticket_path %>

<% 3.times do %>
  <br>
<% end %>

