<%= form_for @sale, :url => sales_update_cart_path(redemption_code: @sale.redemption_code), :html => {id: "cart_form", class: "cart-form"} do |f| %>
  <h3 class='section-heading'>Edit Cart</h3>
  <div class='card'>
    <% cart_tickets.each do |purchase| %>
      <% revision = TicketRevision.find_by(id: purchase.ticket_revision_id) %>
      <div class='grid no-gutter align-middle'>
        <div class='grid-cell one-of-two'>
          <%= revision.ticket_data["name"] %>
        </div>
        <div class='grid-cell one-of-two align-right'>
          <input class='item-count' type="text" name="sale[ticket[ticket_ids][<%= revision.ticket_id %>]]" value="<%= purchase.quantity %>">
          <p><%= link_to "delete", delete_purchase_sale_path(redemption_code: @sale.redemption_code, purchase_id: purchase.id), method: :delete %></p>
        </div>
      </div>
    <% end %>

    <% cart_packages.each do |purchase| %>
      <% revision = PackageRevision.find_by(id: purchase.package_revision_id) %>
      <div class='grid no-gutter align-middle'>
        <div class='grid-cell one-of-two'>
          <%= revision.package_data["name"] %>
        </div>

        <div class='grid-cell one-of-two align-right'>
          <input class='item-count' type="text" name="sale[package[package_ids][<%= revision.package_id %>]]" value="<%= purchase.quantity %>">
          <p><%= link_to "delete", delete_purchase_sale_path(redemption_code: @sale.redemption_code, purchase_id: purchase.id), method: :delete %></p>
        </div>
      </div>
    <% end %>
    <hr>
    <div class='align-right'>
      <div class='tax'>Tax : <%= price(@sale.tax) %></div>
      <div class='total'>Total : <strong><%= price(@sale.charge_total)%></strong></div>
    </div>

  </div>

  <input type="hidden" name="adding" value="">

  <div class="form-footer grid align-middle no-gutter">
    <div class="grid-cell one-of-two">
      <%= link_to 'Cancel', summarize_sale_path(@sale), class: 'back-link' %>
    </div>
    <div class="grid-cell one-of-two align-right">
      <button type="submit" class="primary-button">Update Cart</button>
    </div>
  </div>
<% end %>
