<% if @sale.token && @sale.charge_total > 0 %>
  <%= form_tag summary_path(token: @sale.token), method: :get, class: 'form-footer' do %>
    <div class='quick-cart'>
      <div class='quick-cart-content'>
        <div class="grid">
          <div class='quick-cart-info grid-cell one-of-two'>
            <%= svg_icon 'cart', title: "Cart Subtotal", class: 'quick-cart-icon' %>
            <span class='quick-cart-total'><%= price(@sale.charge_total - @sale.tax)%></span>
            <span class='quick-cart-items'>(<%= pluralize(cart_items, 'item')%>)</span>
          </div>
          <div class="grid-cell one-of-two quick-cart-button">
            <button class='primary-button' type='submit'>Continue &rarr;</button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

