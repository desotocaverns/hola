<% content_for :head do %>
  <style>
    table, th, td {
      border: 1px solid black;
    }
  </style>
<% end %>

<% if !iphone? %>
  <%= link_to "Scan Ticket", "workflow://run-workflow?name=Scan%20Ticket" %>
<% end %>

<%= form_tag sales_path, :method => "get" do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<% @sales.each do |sale| %>
  <div>
    <%= link_to sale.name, "/sales/#{sale.redemption_code}" %> - <%= sale.email %>
     - <%= price sale.charge_total %>
    <% if sale.claimed_on != nil %><span style="color:red">Redeemed On: <%= sale.claimed_on %></span><% end %>
  </div>
<% end %>

<%= will_paginate @sales %>

