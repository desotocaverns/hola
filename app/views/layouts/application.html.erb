<!DOCTYPE html>
<html>
<head>
  <title>DeSoto Billing</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= yield :head %>
</head>
<body>
<% if admin_signed_in? %>
  <span>You are currently signed in as: <%= current_admin.email %></span> |
  <%= link_to "Sign Out", destroy_admin_session_path, method: :delete %> |
  <%= link_to "Purchase Ticket", root_path %> |
  <%= link_to "Admins", admins_path %> |
  <%= link_to "Packages", packages_path %> |
  <%= link_to "Purchases", purchases_path %>
<% end %>

<p class="notice" style="color:green"><%= notice %></p>
<p class="alert" style="color:#FFCC00"><%= alert %></p>

<%= yield %>

</body>
</html>
