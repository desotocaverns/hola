<% content_for :head do %>
  <script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<% end %>

<h2>Tickets</h2>

<form action="" method="POST" id="package-form">
  <span><b>Ticket</b></span>

  <div class="package_type">
    <label>
      <span>Package:</span>
      <select id="package-select">
        <option>Adult Caverns Tour ($21.99)</option>
        <option>Child Caverns Tour ($17.99)</option>
        <option>Attraction Ticket ($4.99)</option>
      </select>
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>Quantity:</span>
      <select id="quantity-select">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
        <option value="6">6</option>
        <option value="7">7</option>
        <option value="8">8</option>
        <option value="9">9</option>
        <option value="10">10</option>
      </select>
    </label>
  </div>

  <br>

  <div class="form-row">
    <label>
      <span>Sub-total:</span>
      <span>$</span><span id="subtotal-value">21.99</span>
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>Tax:</span>
      <span>$</span><span id="tax-value">0.88</span>
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>Total:</span>
      <span>$</span><span id="total-value">22.87</span>
    </label>
  </div>
</form>

<br>

<form action="" method="POST" id="personal-info-form">
  <span><b>Personal information</b></span>

  <div class="form-row">
    <label>
      <span>Name</span>
      <input type="text" size="20" data-stripe="name" id="customer-name"/>
    </label>
  </div>
</form>

<br>

<form action="" method="POST" id="payment-form">
  <span class="payment-errors"></span>

  <span><b>Card information</b></span>

  <div class="form-row">
    <label>
      <span>Card Number</span>
      <input type="text" size="20" data-stripe="number"/>
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>CVC</span>
      <input type="text" size="3" data-stripe="cvc"/>
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>Expiration (MM/YYYY)</span>
      <input type="text" size="2" data-stripe="exp-month"/>
    </label>
    <span> / </span>
    <input type="text" size="4" data-stripe="exp-year"/>
  </div>

  <br>

  <button type="submit">Submit Payment</button>
</form>
