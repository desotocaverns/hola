<% content_for :head do %>
  <script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<% end %>

<h2>Tickets</h2>

<form action="purchase" method="POST" id="package_form">
  <span class="payment-errors"></span>

  <span><b>Tickets</b></span>

  <br>

  <% for p in Package.for_sale %>
    <div class="form-row">
      <label>
        <%= p.title %>
        <input type="number" size="2" name="purchase[purchased_packages_attributes][][quantity]" class="quantity_select" value='0' min='0'>
        <input type="hidden" name="purchase[purchased_packages_attributes][][package_id]" value="<%= p.id %>">
      </label>
    </div>
  <% end %>

  <br>

  <span><b>Personal information</b></span>

  <div class="form-row">
    <label>
      <span>Name</span>
      <input type="text" size="20" name="purchase[name]">
    </label>
  </div>

  <input type="hidden" name="purchase[stripe_token]" id="stripe_token">
</form>

<br>

<form action="" method="post" id="payment_form">
  <span><b>Card information</b></span>

  <div class="form-row">
    <label>
      <span>Card Number</span>
      <input type="text" size="20" data-stripe="number">
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>CVC</span>
      <input type="text" size="3" data-stripe="cvc">
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>Expiration (MM/YYYY)</span>
      <input type="text" size="2" data-stripe="exp-month">
    </label>
    <span> / </span>
    <input type="text" size="4" data-stripe="exp-year">
  </div>

  <br>

  <button type="submit">Submit Payment</button>
</form>
