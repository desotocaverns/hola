<% if @purchase.expires_on <= Time.now %>
  <span style="color:red; font-size:20px">Expired!</span>

  <br><br>
<% end %>

<table>
  <tbody>
    <tr>
      <th>Name:</th>
      <td><%= @purchase.name %></td>
    </tr>
    <tr>
      <th>Total price:</th>
      <td>$<%= @purchase.total_price.to_int / 100.00 %></td>
    </tr>
    <tr>
      <th>Email:</th>
      <td><%= @purchase.email %></td>
    </tr>
    <tr>
      <th>Expires on:</th>
      <td><%= @purchase.expires_on %></td>
    </tr>
    <% if @purchase.redeemed_on != nil %>
      <tr>
        <th>Redeemed at:</th>
        <td><%= @purchase.redeemed_on %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @purchase.redeemed_on == nil && @purchase.expires_on >= Time.now %>
  <br>
  <form method="post" action="/purchase/<%= @purchase.redemption_id %>/redeem">
    <input type="submit" value="Redeem">
  </form>
<% end %>
