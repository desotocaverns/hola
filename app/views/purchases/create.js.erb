if ($('#accordion #personal_info_form').length == 0) {
  <% if @purchase.errors.empty? %>
    $('#accordion').html("<%= escape_javascript render(partial: 'package_quantities') %>");
    $('#accordion').append("<%= escape_javascript render(partial: 'personal_info', status: :success) %>");
    $('#package_quantity_errors').hide();

    $( document ).ready( function() {
      $("#accordion").accordion({
        heightStyle: "fill"
      });
    });
  <% else %>
    $('#package_quantity_errors').html("<%= escape_javascript render(partial: 'errors') %>");
  <% end %>
}
